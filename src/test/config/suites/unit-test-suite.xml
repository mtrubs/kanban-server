<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="10" verbose="2" name="Unit Test Suite"
       annotations="JDK" parallel="tests">

    <test name="Unit tests">
        <groups>
            <run>
                <include name="unit.*"/>
                <exclude name="*.broken"/>
            </run>
        </groups>
        <packages>
            <package name="com.mtrubs.*"/>
        </packages>
    </test>

</suite>